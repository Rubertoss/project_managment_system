@startuml
entity User <<ENTITY>> {
        id : PK
    email
    password
    username
        user_status
  }
  
  entity Access <<ENTITY>> {
      role
      user_id :FK
      project_id :FK
  }
  
  entity Project <<ENTITY>> {
      id :PK
    name
    description
  }
  
  entity Task <<ENTITY>> {
      id :PK
    name
    desctiption
        date_of_creation
        deadline
        status
        project_id :FK
  }
  
  entity Artifact <<ENTITY>> {
      id :PK
    name
    description
        link
        task_id :FK
  }
  
    Access "N"--"1" User
    Access "N"--"1" Project
    Task "N"-u-"1" Project
    Task "1"--"N" Artifact
  
@enduml
